<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PratoDescricao"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">
        <TextView
            android:id="@+id/TV_Header_Descricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/TXLoading"
            android:textSize="35sp"
            android:background="@drawable/customheaderbackground"
            android:layout_marginBottom="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical">
            <ImageView
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:id="@+id/IV_imagem_descricao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/imagem_carregando"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:background="@drawable/customheaderbackground">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/TV_Texto_Preco"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TXLoading"
                    android:background="@drawable/customedittextbackground"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/TV_Texto_Descricao"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TXLoading"
                    android:background="@drawable/customedittextbackground"
                    android:layout_marginBottom="5dp"/>
                <TextView
                    android:id="@+id/TV_Ingrediente_Descricao"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TXLoading"
                    android:background="@drawable/customedittextbackground"
                    android:layout_marginBottom="5dp"/>
            </LinearLayout>
        </ScrollView>
        <Button
            android:id="@+id/BT_Prato_Checkout"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/BTPedido"
            android:background="@drawable/custombutton"
            android:textAllCaps="false"
            android:typeface="sans"
            android:textColor="@color/colorButtonText"
            android:textSize="25sp"/>
    </LinearLayout>
</ScrollView>