<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuPedidosAndamento"
    android:orientation="vertical"
    android:layout_margin="16dp">
    <Button
        android:id="@+id/BT_Pedidos_Espera"
        android:text="Em espera"
        android:layout_width="match_parent"
        android:layout_height="75dp" />
    <Button
        android:id="@+id/BT_Pedidos_Andamento"
        android:text="Em andamento"
        android:layout_width="match_parent"
        android:layout_height="75dp" />
    <Button
        android:id="@+id/BT_Pedidos_Concluido"
        android:text="Pedidos Concluidos"
        android:layout_width="match_parent"
        android:layout_height="75dp" />
    <Button
        android:id="@+id/BT_Pedidos_Cancelado"
        android:text="Pedidos Cancelados"
        android:layout_width="match_parent"
        android:layout_height="75dp" />




</LinearLayout>