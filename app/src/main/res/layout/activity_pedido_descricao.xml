<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedidoDescricao"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:background="@drawable/customheaderbackground">
    <Button
        android:id="@+id/BT_Iniciar_Pedido"
        android:text="@string/BTIniciar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/custombutton"
        android:textAllCaps="false"
        android:typeface="sans"
        android:textColor="@color/colorButtonText"
        android:textSize="25sp"
        android:layout_marginBottom="25dp"/>
    <Button
        android:id="@+id/BT_Concluido_Pedido"
        android:text="@string/BTPronto"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/custombutton"
        android:textAllCaps="false"
        android:typeface="sans"
        android:textColor="@color/colorButtonText"
        android:textSize="25sp"
        android:layout_marginBottom="25dp"/>
    <Button
        android:id="@+id/BT_Cancelar_Pedido"
        android:text="@string/TVCancelar"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/custombutton"
        android:textAllCaps="false"
        android:typeface="sans"
        android:textColor="@color/colorButtonText"
        android:textSize="25sp" />

</LinearLayout>